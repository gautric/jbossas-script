#!/bin/sh
#
# This script list all JBoss instance
#

. `dirname $0`/functions

#List of instance via INITD symb link
JBOSS_EAP6_DEFAULT_STANDALONE_SCRIPT=${JBOSS_EAP6_DEFAULT_STANDALONE_SCRIPT:-"/usr/share/jboss-script/bin/standalone.sh"}

[ ! -f ${JBOSS_EAP6_DEFAULT_STANDALONE_SCRIPT} ] && ERROR "Please check jbossas package" && exit $RETKO

find  /var/lib/jbossas/* -xtype l -follow -inum `ls -i ${JBOSS_EAP6_DEFAULT_STANDALONE_SCRIPT} | cut -f1 -d' '` | cut -f4 -d'/'

exit $RETVAL
